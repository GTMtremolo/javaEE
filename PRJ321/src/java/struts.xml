<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- Configuration for the default package. -->
    <constant name="struts.action.excludePattern" value="/LoginController,/SendMail,/SpamEmailServlet,/SubEmailServlet,/Test,/UnsubEmailServlet,/SearchServlet,/LoginController,/LogoutController,/ProductController,/ImageController"/>
    <package name="default" extends="struts-default">
        <action name="upload" class="com.action.uploadFile">
                <result name="success" type="redirect">/admin/AddProduct.jsp</result>
                <result name="error" type="redirect">/admin/AddProduct.jsp</result>
        </action>
        
        <action name="update" class="com.action.UpdateProduct">
                <result name="success" type="redirect">/admin/Update.jsp</result>
                <result name="error" type="redirect">/admin/Update.jsp</result>
        </action>
    </package>
</struts>
